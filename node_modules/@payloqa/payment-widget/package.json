{
  "name": "@payloqa/payment-widget",
  "version": "1.0.5",
  "type": "module",
  "description": "Payment widget for Payloqa",
  "main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": {
      "default": "./dist/payment-widget.css"
    },
    "./dist/payment-widget.css": "./dist/payment-widget.css"
  },
  "scripts": {
    "dev": "vite",
    "build": "rollup -c && node scripts/build-css.js",
    "build:css": "node scripts/build-css.js",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "dependencies": {
    "formik": "^2.4.5",
    "react-otp-input": "^3.1.1",
    "react-phone-number-input": "^3.4.12",
    "react-select": "^5.8.0",
    "react-shadow": "^20.6.0",
    "yup": "^1.3.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-replace": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@tailwindcss/forms": "^0.5.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/react-phone-number-input": "^3.0.17",
    "@types/react-select": "^5.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.0.0",
    "cssnano": "^6.0.0",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "rollup": "^4.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "rollup-plugin-postcss": "^4.0.0",
    "tailwindcss": "^3.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "keywords": [
    "payloqa",
    "payment",
    "widget",
    "react",
    "mobile-money",
    "payment-processing"
  ],
  "author": "Payloqa Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/payloqa/payloqa-widgets.git",
    "directory": "packages/payment-widget"
  },
  "homepage": "https://github.com/payloqa/payloqa-widgets#readme",
  "bugs": {
    "url": "https://github.com/payloqa/payloqa-widgets/issues"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
